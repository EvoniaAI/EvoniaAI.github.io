---
import "../global.css";
import LayoutShell from "../components/layout.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "EvoniaAI · 灵栈平云", description = "EvoniaAI is a bilingual consulting studio specializing in web development, career guidance, and enterprise software." } = Astro.props;
---

<!doctype html>
<html lang="zh-Hans">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <slot name="seo" />
    <title>{title}</title>
  </head>
  <body>
    <LayoutShell>
      <slot />
    </LayoutShell>
  </body>
</html>
