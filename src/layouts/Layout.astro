---
import "../global.css";
import LayoutShell from "../components/layout.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "EvoniaAI · 灵栈平云", description = "EvoniaAI is a bilingual consulting studio specializing in web development, career guidance, and enterprise software." } = Astro.props;
---

<!doctype html>
<html lang="zh-Hans">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Lora:wght@400;500&family=Inter:wght@300;400;500;600&family=Noto+Sans+SC:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="EvoniaAI - RSS Feed"
      href={`${Astro.site}rss.xml`}
    />
    <slot name="seo" />
    <title>{title}</title>
  </head>
  <body>
    <LayoutShell>
      <slot />
    </LayoutShell>
  </body>
</html>
<style is:global>
  :root {
    --at-primary-color: oklch(71.33% 0.112 194.94);
    --at-primary-color-light: oklch(71.33% 0.112 194.94 / 31.65%);
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: black;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  ::selection {
    background-color: var(--at-primary-color);
    color: rgba(249, 250, 251, 1);
    -webkit-text-fill-color: rgba(249, 250, 251, 1);
  }
</style>
